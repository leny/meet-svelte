{
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "all",
    "bracketSpacing": false,
    "jsxBracketSameLine": true,
    "overrides": [
        {
            "files": "*.json",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.svelte", "*.html"],
            "parser": "html",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
